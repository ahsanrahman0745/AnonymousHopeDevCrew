<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:ignore="MissingConstraints"
    android:layout_height="match_parent">



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/imageView3"
        android:layout_height="230dp"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="match_parent"/>

    <!--<ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/ic_baseline_image_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="11sp"
        android:layout_marginEnd="11sp"
        android:layout_marginBottom="11sp"
        android:layout_marginTop="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:text="ahsan rahman"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:id="@+id/titleOfEvent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="11sp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Name Of NGO: "
                            android:textStyle="bold"
                            android:id="@+id/titleNameOfUserOrNGO"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Phone: "
                            android:textStyle="bold"
                            android:layout_marginTop="11sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Email Address: "
                            android:layout_marginTop="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Date: "
                            android:id="@+id/dateOfEvent"
                            android:layout_marginTop="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Ngo "
                            android:id="@+id/nameNGOINEvent"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="phone: "
                            android:id="@+id/phoneNo"
                            android:layout_marginTop="11sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Address: "
                            android:id="@+id/addressNGO"
                            android:layout_marginTop="11sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Date: "
                            android:layout_marginTop="11sp"
                            android:id="@+id/dateOfNGO"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:paddingTop="11sp"
                    android:paddingBottom="11sp"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:id="@+id/chatMYpost"
                        app:cardCornerRadius="15sp"
                        app:cardElevation="30sp"
                        android:layout_marginEnd="13sp"
                        android:backgroundTint="@color/green"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Chat"
                                android:paddingBottom="11sp"
                                android:paddingTop="11sp"
                                android:textSize="19dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                android:paddingStart="29sp"
                                android:paddingEnd="29sp"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:id="@+id/editMYpost"
                        app:cardCornerRadius="15sp"
                        app:cardElevation="30sp"
                        android:layout_marginEnd="13sp"
                        android:backgroundTint="@color/green"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Edit"
                                android:paddingBottom="11sp"
                                android:paddingTop="11sp"
                                android:textSize="19dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                android:paddingStart="29sp"
                                android:paddingEnd="29sp"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:id="@+id/delMYpost"
                        app:cardCornerRadius="15sp"
                        app:cardElevation="30sp"
                        android:backgroundTint="@color/red"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Delete"
                                android:paddingBottom="11sp"
                                android:paddingTop="11sp"
                                android:textSize="19dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                android:paddingStart="29sp"
                                android:paddingEnd="29sp"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="11sp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:text="Description: "/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:id="@+id/descriptionOfEvent"
                        android:text="Description: "/>



                </LinearLayout>




            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>